<title><%= title %></title> 
<style>
   @media screen and (max-width: 600px) {
    #backImage-id{
        display: none;
    }
  }
</style>
<section class="section">
    <div>
        <% if (message) { %>
            <div class="popup-form" id="myForm">
              <div class="popup-content">
                <div class="close-button" onclick="closeForm()">&times;</div>
                <h2> <%= message %></h2>
              </div>
            </div>
        <% } %>
    </div>
    <div class="container">
     <div class="columns">
      <div class="column">
       <div class="columns is-mobile">
        <div class="column" id="backImage-id">
         <figure class="image">
          <img src="/images/contact_back.png" alt="Contact Us">
         </figure>
        </div>
        <div class="column">
         <div class="columns is-mobile is-vcentered">
          <div class="column">
           <figure class="image is-64x64">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQZmX6-9ugkJsnjZygiNtATGAhEtWipQ72eVg&usqp=CAU" alt="Contact Us Icon">
           </figure>
          </div>
          <div class="column">
           <h3 class="title is-4">Get In Touch</h3>
           <p>Please fill out the form below to get in touch with us.</p>
          </div>
        </div>
        <hr>
  
        <form action="/send-contact-form" method="POST">
            <div class="field">
                <label class="label">Name</label>
                <div class="control has-icons-left">
                <input class="input" type="text" name="name" placeholder="Your Name" required>
                <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
                </span>
                </div>
            </div>
            <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left">
                <input class="input" type="email" name="email" placeholder="Your Email" required>
                <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
                </span>
                </div>
            </div>
            <div class="field">
                <label class="label">Message</label>
                <div class="control">
                <textarea style="resize: none;" class="textarea" name="message" placeholder="Your Message" required></textarea>
                </div>
            </div>
            <div class="field">
                <div class="control">
                <button class="button is-primary">
                Send Message
                </button>
                </div>
            </div>
        </form>
    </div>
    </div>
      </div>
      </div>
    </div>
</div>
</section>