<title><%= title %></title>

<% if (message) { %>
  <div class="popup-form" id="myForm">
    <div class="popup-content">
      <div class="close-button" onclick="closeForm()">&times;</div>
      <h2> <%= message %></h2>
    </div>
  </div>
<% } %>

<section class="section">
  <div class="container">
    <h1 class="title">YouTube to Audio Converter</h1>

    <form action="/download-audio" method="get">
      <div class="field">
        <label class="label">YouTube Video URL</label>
        <div class="control">
          <input class="input" type="text" name="url" placeholder="https://www.youtube.com/watch?v=dQw4w9WgXcQ" required>
        </div>
      </div>

      <div class="field">
        <label class="label">Audio Quality</label>
        <div class="control">
          <div class="select">
            <select name="quality">
              <option value="128">Low (128 kbps)</option>
              <option value="192">Medium (192 kbps)</option>
              <option value="256">High (256 kbps)</option>
              <option value="320">Top (320 kbps)</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <button class="button is-primary" type="submit">
            <span class="icon">
              <i class="fas fa-file-audio"></i>
            </span>
            <span>Convert to MP3</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</section>
